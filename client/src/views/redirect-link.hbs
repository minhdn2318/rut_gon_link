<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redirecting...</title>
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: linear-gradient(120deg, #f8fafc 0%, #e0e7ff 100%);
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }
        .container {
            max-width: 500px;
            margin: 60px auto;
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.08);
            padding: 32px 40px 40px 40px;
            text-align: center;
        }
        h1 {
            color: #3730a3;
            margin-bottom: 18px;
        }
        .origin-link {
            color: #2563eb;
            font-size: 1.1rem;
            word-break: break-all;
            text-decoration: none;
            font-weight: 500;
        }
        .origin-link:hover {
            color: #7c3aed;
            text-decoration: underline;
        }
        .redirect-btn {
            margin-top: 28px;
            background: linear-gradient(90deg, #6366f1 0%, #818cf8 100%);
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 12px 32px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s;
            box-shadow: 0 2px 8px rgba(99,102,241,0.08);
        }
        .redirect-btn:hover {
            background: linear-gradient(90deg, #4f46e5 0%, #6366f1 100%);
        }
        .countdown {
            margin-top: 18px;
            color: #ef4444;
            font-size: 1.1rem;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Redirect to Original Link</h1>
        <div>
            <a class="origin-link" href="{{origin}}" target="_blank">{{origin}}</a>
        </div>
        <button class="redirect-btn" id="redirectBtn">Go to Original Link</button>
        <div class="countdown" id="countdown" style="display:none;"></div>
    </div>
    <script>
        const btn = document.getElementById('redirectBtn');
        const countdownDiv = document.getElementById('countdown');
        let timer = 5;
        btn.addEventListener('click', () => {
            btn.disabled = true;
            btn.textContent = 'Redirecting...';
            countdownDiv.style.display = 'block';
            countdownDiv.textContent = `Redirecting in ${timer} seconds...`;
            const interval = setInterval(() => {
                timer--;
                countdownDiv.textContent = `Redirecting in ${timer} seconds...`;
                if (timer === 0) {
                    clearInterval(interval);
                    window.location.href = '{{origin}}';
                }
            }, 1000);
        });
    </script>
</body>
</html>
